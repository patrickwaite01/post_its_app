<!DOCTYPE html>
<html>
 <head>
 <% include ./partials/head %>
 </head>
 <body>
   <header>
     <% include ./partials/header %>
   </header>
   <h1 class='center'>Reminders</h1>
   <hr />
   <div class='row'>
     <div class='col s12 m4 offset-m4'>
       <h3>Add Post It Note</h3>
       <form action='/notes' method='post'>
         <input type='text' name='title' placeholder='title' required />
         <input type='text' name="description" placeholder="reminder" required />
         <button class='btn btn-waves yellow black-text' type='submit'>Post It!</button>
       </form>
     </div>
    </div> 


<div class="row">
        <div class="col s12 m2 offset-m5">
          <div class="card blue-grey darken-1">
            <div class="card-content yellow black-text">
              <span class="card-title yellow">Reminders...</span>
              <!-- <p>Reminder goes here...</p> -->
            </div>
            <div class="card-action yellow">
            
           <tbody> 
            <% notes.forEach (function(note){ %>
              <% action = '/notes/' + note.id %>
                <tr>
                  <td> <a href =<%= action %>><%= note.title %></a> </td>
             <td><%= note.description %></td>
             <td>         

              
              <form action=<%= action %> method='POST'>
                  <button class='btn btn-flat waves-effect' type='submit'>Delete</button>
                </form>
              <% }); %>  
      
               </div>
          </div>
        </div>
      </div>

   </body>
</html>
